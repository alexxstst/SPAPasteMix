

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form ng-submit="submit()" ng-controller="createController">
                <div class="form-group">
                    <label for="inputTitle">Title</label>
                    <input type="text" ng-model="title"  class="form-control" id="inputTitle" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label for="inputText">Text</label>
                    <textarea class="form-control" ng-model="text" id="inputText" placeholder="Text" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="inputText">Время хранения</label>
                    <select class="form-control" name="timeLimit" id="timeLimit" ng-model="timeLimit">
                        <option value="">Никогда</option>
                        <option value="10m">10 минут</option>
                        <option value="1h">1 час</option>
                        <option value="1d">1 день</option>
                        <option value="7d">1 неделя</option>
                        <option value="1M">1 месяц</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>
